pdf:
	pandoc --from=markdown \
		--to=pdf \
		-o docs/Overview.pdf \
		-V colorlinks=true \
		docs/Overview.md

	pandoc --from=markdown \
		--to=pdf \
		-o docs/Tasks.pdf \
		-V colorlinks=true \
		docs/Tasks.md

	pandoc --from=markdown \
		--to=pdf \
		-o docs/Challenge.pdf \
		-V colorlinks=true \
		docs/Challenge.md

	pandoc --from=markdown \
		--to=pdf \
		-o docs/MiniScheme.pdf \
		-V colorlinks=true \
		docs/MiniScheme.md
